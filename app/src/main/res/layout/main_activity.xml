<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/AuthenticationButton"
            android:layout_width="280dp"
            android:layout_height="130dp"
            android:textSize="25sp"
            app:cornerRadius="25dp"
            android:id="@+id/AuthenticateButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:checkable="false"
            android:clickable="true"
            android:longClickable="false"
            android:focusable="true"
            android:textAllCaps="true" />

    <Button
            android:text="@string/AddFaceButton"
            android:layout_width="280dp"
            android:layout_height="130dp"
            android:textSize="25sp"
            app:cornerRadius="25dp"
            android:id="@+id/AddFaceButton"
            android:layout_marginEnd="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/AuthenticateButton"
            android:layout_marginTop="204dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="150dp"
            android:clickable="true"
            android:checkable="false"
            android:focusable="true"
            android:textAllCaps="true" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/DebugMessage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="27dp"
            app:layout_constraintTop_toBottomOf="@+id/AddFaceButton"
            app:layout_constraintVertical_bias="0.965"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp"
            android:layout_marginEnd="177dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:clickable="false"
            android:longClickable="false"
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>